<%- include("header") %>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newItems.forEach(item => { %>
  <div class="item">
    <input type="checkbox">
    <p><%= item.name %></p>
  </div>
  <% }); %>

  <form action="/" class="item" method="post">
    <input type="text" name="newItem" autocomplete="off" placeholder="New Item">
    <button type="submit" class="button" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>

<%- include("footer") %>